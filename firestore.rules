
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isHouseholdOwner(householdId) {
      return isSignedIn() && request.auth.uid == householdId;
    }
    
    // /households/{householdId}
    // The user's UID is the document ID for their household.
    match /households/{householdId} {
      // A user can read, update, and delete their own household document.
      allow read, update, delete: if isHouseholdOwner(householdId);

      // A user can create their household document. The ID must match their UID.
      allow create: if isHouseholdOwner(householdId) && request.resource.data.id == request.auth.uid;
      
      // Children subcollection
      match /children/{childId} {
        // Only the household owner can manage their children's data.
        allow read, write, update, delete: if isHouseholdOwner(householdId);

        match /childProgressUpdates/{updateId} {
            // Only the household owner can manage progress updates.
            allow read, write, update, delete: if isHouseholdOwner(householdId);
        }
      }
      
      // FollowUpVisits subcollection
      match /followUpVisits/{visitId} {
        // Only the household owner can manage their follow-up visits.
        allow read, write, update, delete: if isHouseholdOwner(householdId);
      }
    }
  }
}
