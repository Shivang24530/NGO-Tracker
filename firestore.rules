rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // DASHBOARD: Logged-in users can read general dashboard stats
    match /stats/dashboard {
      allow read: if isSignedIn();
    }

    // HOUSEHOLDS: Users can only read/write households they own.
    match /households/{householdId} {
      allow read, write: if isOwner(resource.data.ownerId);

      // CHILDREN & VISITS: Users can manage children and visits for households they own.
      match /children/{childId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/households/$(householdId)).data.ownerId);
      }

      match /followUpVisits/{visitId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/households/$(householdId)).data.ownerId);
      }
    }
    
    // USERS: A user can only access their own user document.
    match /users/{userId} {
        allow read, write: if isOwner(userId);
    }
  }
}
