
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the user is the owner of the provided document.
    // The `doc` parameter is the result of a get() call or the `resource` variable.
    function isOwner(doc) {
      return isSignedIn() && request.auth.uid == doc.data.ownerId;
    }

    // households/{householdId}
    match /households/{householdId} {
      // Any authenticated user can create a household, as long as they are the owner.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Any authenticated user (admin/field worker) can read all household data.
      allow read: if isSignedIn();

      // Only the original creator can update or delete their household document.
      allow update, delete: if isOwner(resource);
      
      // Children subcollection
      match /children/{childId} {
        // Any authenticated user can manage child data.
        allow read, write: if isSignedIn();
      }
      
      // FollowUpVisits subcollection
      match /followUpVisits/{visitId} {
        // Any authenticated user can manage follow-up visits.
        allow read, write: if isSignedIn();
      }

      // ChildProgressUpdates nested subcollection
      match /children/{childId}/childProgressUpdates/{updateId} {
        // Any authenticated user can manage progress updates.
        allow read, write: if isSignedIn();
      }
    }

    // This rule allows a user to perform a collection group query on 'children'
    match /{path=**}/children/{childId} {
      allow read: if isSignedIn();
    }
  }
}
