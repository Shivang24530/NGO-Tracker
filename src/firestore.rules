
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the user is the owner of the household document.
    function isOwner(resource) {
      return isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // households/{householdId}
    match /households/{householdId} {
      // Any authenticated user can create a household, as long as they are the owner.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow a user to list households only if they are querying by their own ownerId.
      // This is a secure way to allow users to see only their own data.
      allow list: if isSignedIn() && request.query.get('ownerId') == request.auth.uid;

      // Users can read a single household document if they are the owner.
      allow get: if isOwner(resource);

      // Only the owner can update or delete their household document.
      allow update, delete: if isOwner(resource);
      
      // Children subcollection
      match /children/{childId} {
        // Only the owner of the parent household can manage their children's data.
        allow read, write: if isOwner(get(/databases/$(database)/documents/households/$(householdId)));
      }
      
      // FollowUpVisits subcollection
      match /followUpVisits/{visitId} {
        // Only the owner of the parent household can manage their follow-up visits.
        allow read, write: if isOwner(get(/databases/$(database)/documents/households/$(householdId)));
      }

      // ChildProgressUpdates nested subcollection
      match /children/{childId}/childProgressUpdates/{updateId} {
        // Only the owner of the grandparent household can manage progress updates.
        allow read, write: if isOwner(get(/databases/$(database)/documents/households/$(householdId)));
      }
    }
  }
}
