
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to read and write files.
    // This is appropriate for an internal app where all users are trusted.
    // For more granular control, you could restrict writes to specific paths,
    // e.g., match /households/{householdId}/{fileName}
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
